# -----------------------------
# SERVER / DEPLOY SETTINGS
# -----------------------------
PORT=3000                       # Backend server port
NODE_ENV=production             # development | production
LOG_LEVEL=info                  # debug | info | warn | error

# -----------------------------
# BROKER / API CONFIG
# -----------------------------
# Quotex / Binary
QUOTEX_USERNAME=info.universefor.loop@gmail.com
QUOTEX_PASSWORD=mamunxD@091
# Forex / OTC broker
FOREX_USERNAME=thetradinggod9@gmail.com 
FOREX_PASSWORD=mamunxD@091

# -----------------------------
# WATCH LIST / PAIRS
# -----------------------------
# Comma-separated, all OTC and Forex pairs
WATCH_SYMBOLS=EURUSD,USDJPY,GBPUSD,AUDUSD,USDINR,USDPKR,USDTRY,USDARS,USDEGP,USDIDR,AUDCHF,AUDJPY,EURCHF,EURNZD

# -----------------------------
# BINARY / OTC SETTINGS
# -----------------------------
BINARY_EXPIRY_SECONDS=60       # 1 min expiry
BINARY_MAX_CONFIDENCE=99       # Max confidence % for signals
BINARY_AUTO_NEXT=true           # Auto generate next signal after expiry
BINARY_SHOW_COUNTDOWN=true      # Show countdown for expiry
BINARY_ALLOW_SKIP=false         # Skip unavailable pairs

# -----------------------------
# FOREX SETTINGS
# -----------------------------
FOREX_SIGNAL_INTERVAL=300      # Forex scalp signal interval (seconds)
FOREX_AUTO_PAIR=true           # Auto select pair based on analysis
FOREX_MAX_CONFIDENCE=99        # Max confidence %
FOREX_ENABLE_SCALPING=true
FOREX_ENABLE_INTRADAY=true

# -----------------------------
# STRATEGY / KNOWLEDGE CONFIG
# -----------------------------
# Technical, Price Action & Advanced Knowledge
ENABLE_PRICE_ACTION=true
ENABLE_ROUND_NUMBERS=true
ENABLE_SNR=true
ENABLE_FVG=true
ENABLE_ORDER_BLOCKS=true
ENABLE_FIBONACCI=true
ENABLE_MOMENTUM=true
ENABLE_VOLUME=true
ENABLE_CANDLE_PATTERNS=true
ENABLE_ICHIMOKU=false           # optional
ENABLE_SMART_ORDERS=true
ENABLE_ALGO_ADAPTIVE=true
ENABLE_ICT_STRATEGY=true
ENABLE_SMC_STRATEGY=true

# -----------------------------
# AUTO-LEARNING / ADAPTIVE
# -----------------------------
AUTO_LEARN=true                  # Enable dynamic learning
AUTO_CREATE_PATTERN=true         # Auto generate new patterns
AUTO_ADAPT_STRATEGY=true         # Auto adjust rules per market
AUTO_FIX_ERRORS=true             # Self-correction system
AUTO_HEAL=true                   # Auto heal failed signals
MAX_LEVEL=9999                   # God level upgrade
ULTIMATE_POWER=true

# -----------------------------
# TIMEZONE / COUNTRY
# -----------------------------
TIMEZONE_UTC_OFFSET=6
COUNTRY=Bangladesh
AUTO_TIME_SYNC=true

# -----------------------------
# UI / FRONTEND SETTINGS
# -----------------------------
ENABLE_ULTRA_PREMIUM_DESIGN=true
ENABLE_ANIMATION=true
ENABLE_DYNAMIC_VIEW=true
SHOW_SIGNAL_BUTTON=true
SHOW_NEXT_BUTTON=true
SHOW_RESULT_AFTER_TRADE=true
ENABLE_AUTO_UPDATE_FRONTEND=true
THEME=ultra_premium

# -----------------------------
# TELEGRAM / NOTIFICATION
# -----------------------------
ENABLE_TELEGRAM=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_channel_or_user_id_here

# -----------------------------
# DEBUG / LOGGING
# -----------------------------
DEBUG_MODE=false
ENABLE_LOGGING=true
SAVE_LOGS=true
VERBOSE_OUTPUT=false

# -----------------------------
# SAFETY / CONTROL
# -----------------------------
STOP_ON_LOSS=true                # Auto stop on loss
PERMISSION_CONTROL=true          # Require permission for certain actions
ALLOW_AUTO_MANIPULATION=false
AUTO_BROKER_MANIPULATION_DETECT=true
